{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types", "@types", "/src/**/*.d.ts"],
    "types": ["@types/node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}